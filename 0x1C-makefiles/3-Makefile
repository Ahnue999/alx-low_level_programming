CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o : main.c
	$(CC) -c main.c -o main.o

school.o : school.c
	$(CC) -c school.c -o school.o

clean :
	$(RM) -f *~ $(NAME)

oclean :
	$(RM) -f $(OBJ)

fclean : clean oclean

re : $(SRC)
	$(CC) -c main.c -o main.o
	$(CC) -c school.c -o school.o
	$(CC) $(OBJ) -o $(NAME)
